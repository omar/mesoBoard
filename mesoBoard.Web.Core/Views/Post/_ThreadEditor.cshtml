@model IThreadEditor

<dt>Thread type</dt>

<dd>
    @Html.DropDownListFor(model => model.ThreadEditor.ThreadType, Model.ThreadEditor.ThreadTypeList)
    @Html.ValidationMessageFor(model => model.ThreadEditor.ThreadType) 
</dd>


@if (Model.ThreadEditor.AllowThreadImages)
{
    <dt>Thread image</dt>
    <dd class="images">
        @await Html.PartialAsync("_ThreadImages")
    </dd>
} 

<dt>Title</dt>

<dd>
    @Html.TextBoxFor(model => model.ThreadEditor.Title, new { @class = "title", tabindex = 1 }) 
    @Html.ValidationMessageFor(model => model.ThreadEditor.Title)
    @if (Model.EditorType == EditorType.Edit)
    {
        @Html.HiddenFor(model => model.ThreadEditor.ThreadID)
    }
 
</dd>
