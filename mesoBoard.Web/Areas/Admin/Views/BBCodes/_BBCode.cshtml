@model BBCodeViewModel
<dl>
    <dt>Tag</dt>
    <dd>
        @Html.TextBoxFor(model => model.Tag) 
        @Html.ValidationMessageFor(model => model.Tag) 
    </dd>
                    
    <dt>Parse</dt>
    <dd>
        @Html.TextAreaFor(model => model.Parse, new { cols = "50", rows = "3", @class = "normal" })
        @Html.ValidationMessageFor(model => model.Parse) 
    </dd>
                            
    <dt>&nbsp;</dt>
    <dd>
        @Html.HiddenFor(model => model.BBCodeID) 
        <input type="submit" value="@Html.SubmitButtonText(Model.BBCodeID)" />
    </dd>
</dl>
