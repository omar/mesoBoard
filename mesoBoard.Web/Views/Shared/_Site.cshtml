<html xmlns="http://www.w3.org/1999/xhtml">
    <head runat="server">
        <title>@Html.PageTitle()</title>
        <script type="text/javascript" src="@Url.ThemeContent("~/Content/Scripts/jquery-1.4.2.min.js")"></script> 
        <script src="@Url.ThemeContent("~/Content/Scripts/jquery.markitup.pack.js")" language="javascript" type="text/javascript"></script>
        <script src="@Url.ThemeContent("~/Content/Scripts/bbcode-set-parsed.js")" language="javascript" type="text/javascript" ></script>
        <link href="@Url.ThemeContent("~/Content/Styles/theme.css")" rel="stylesheet" type="text/css" />
    	<link href="@Url.ThemeContent("~/Images/favicon.png")" rel="shortcut icon" />             
        <link href="@Url.ThemeContent("~/Content/SyntaxHighlighter/Styles/shCore.css")" type="text/css" rel="Stylesheet" />
        <link href="@Url.ThemeContent("~/Content/SyntaxHighlighter/Styles/shThemeDefault.css")" type="text/css" rel="Stylesheet" />
        <script src="@Url.ThemeContent("~/Content/SyntaxHighlighter/Scripts/shCore.js")" type="text/javascript"></script>
        <script src="@Url.ThemeContent("~/Content/SyntaxHighlighter/Scripts/shLegacy.js")" type="text/javascript"></script>
        <script src="@Url.ThemeContent("~/Content/SyntaxHighlighter/Scripts/shAutoloader.js")" type="text/javascript"></script>
Â        @Html.SyntaxHighlightingScripts(mesoBoard.Services.SiteConfig.SyntaxHighlighting.Value)
        <script type="text/javascript">
            $(document).ready(function () {
                $("textarea.bbcode").markItUp(bbcodeSettings);
                SyntaxHighlighter.all();
                dp.SyntaxHighlighter.HighlightAll('code');
            });
        </script>
        @RenderSection("HeadContent", false)
    </head>

    <body>          
        <div id="wrap">
            <div id="header">
                @await Component.InvokeAsync("BoardHeader")
            </div>

            <div id="content">
                @Html.GetMessages()

                <div class="bread_crumb">
                    @if (IsSectionDefined("BreadCrumbContent"))
                    {
                        @RenderSection("BreadCrumbContent", false)
                    }
                    else
                    {
                        @await Html.PartialAsync("_BreadCrumb");
                    }
                </div>
                @RenderBody()
                <div class="clearfix">&nbsp;</div>
            </div>
            
            
            <div id="footer">
                @await Html.PartialAsync("_Footer")
            </div>
        </div>        
    </body>
</html>
